|$(document).ready(function () {
- if (typeof info != 'undefined' && info.length)
    - each inf in info
        |$.bootstrapGrowl('#{inf}', {
        |    ele: 'body',
        |    type: 'info',
        |    offset: {from: 'top', amount: 20},
        |    align: 'center',
        |    width: 250,
        |    delay: 5000,
        |    allow_dismiss: true,
        |    stackup_spacing: 10
        |});
- if (typeof error != 'undefined' && error.length)
    - each err in error
        |$.bootstrapGrowl('#{err}', {
        |    ele: 'body',
        |    type: 'danger',
        |    offset: {from: 'top', amount: 20},
        |    align: 'center',
        |    width: 250,
        |    delay: 5000,
        |    allow_dismiss: true,
        |    stackup_spacing: 10
        |});
- if (typeof success != 'undefined' && success.length)
    - each succ in success
        |$.bootstrapGrowl('#{succ}', {
        |    ele: 'body',
        |    type: 'success',
        |    offset: {from: 'top', amount: 20},
        |    align: 'center',
        |    width: 250,
        |    delay: 3000,
        |    allow_dismiss: true,
        |    stackup_spacing: 10
        |});
- if (typeof warning != 'undefined' && warning.length)
    - each warn in warning
        |$.bootstrapGrowl('#{warn}', {
        |    ele: 'body',
        |    type: 'warning',
        |    offset: {from: 'top', amount: 20},
        |    align: 'center',
        |    width: 250,
        |    delay: 5000,
        |    allow_dismiss: true,
        |    stackup_spacing: 10
        |});
|});